{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Person</th>
                <td>{{ recipe.person }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recipe.difficulty }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ recipe.rate }}</td>
            </tr>
            <tr>
                <th>TimePreparation</th>
                <td>{{ recipe.timePreparation }}</td>
            </tr>
            <tr>
                <th>TimeCooking</th>
                <td>{{ recipe.timeCooking }}</td>
