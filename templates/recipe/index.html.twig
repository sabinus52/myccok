{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Person</th>
                <th>Difficulty</th>
                <th>Rate</th>
                <th>TimePreparation</th>
                <th>TimeCooking</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.person }}</td>
                <td>{{ recipe.difficulty }}</td>
                <td>{{ recipe.rate }}</td>
                <td>{{ recipe.timePreparation }}</td>
                <td>{{ recipe.timeCooking }}</td>
                <td>
                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('recipe_update', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_create') }}">Create new</a>
{% endblock %}
