<div class="modal fade" id="confirmCreateIngredient" tabindex="-1" aria-labelledby="confirmCreateIngredientLabel" aria-hidden="true">
    {{ form(formingredient) }}
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmCreateIngredientLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-prototype="L'ingrédient <strong id='newIngredient'></strong> n'éxiste pas.<br><br>
                Voulez vous ajouter ce nouvel ingrédient ?">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                <button type="button" class="btn btn-primary">Oui</button>
            </div>
        </div>
    </div>
</div>